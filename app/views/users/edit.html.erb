<html>
<head>
<body>
<header>
<main>
<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>


<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user), method: :patch, local: true, multipart: true do |form| %>
<div class="form_group">
<%= form.label :name %>
<%= form.text_field :name, class: "form-control name", value: @user.name %>
</div>

<div class="form_group">
<%= form.label :Image %>
<%= form.file_field :profile_image , class: "form-control-file user_image", accept: "image/*" %>
</div>

<div class="form-group">
<p>Introduction</p>
<%= form.text_area :introduction, class: "form-control", value: form.object.introduction %>
</div>

<div class="form-group">
<%= form.submit "Update User", class: "btn btn-secondary" %>
</div>
<% end %>


</main>









</body>
</main>
</header>
</head>
</html>