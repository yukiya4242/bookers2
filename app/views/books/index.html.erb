<body>

<main>
<p id="notice"></p>
<div class='container px-5 px-sm-0'>



<div class='row'>
<div class='col-md-3'>




<h2>User info</h2>
<% if @user.profile_image.attached? %>
<%= image_tag @user.profile_image, size: "150x150" %>
<% else %>
<%= image_tag 'no_image', size: "150x150" %>
<% end %>
<table class='table'>
<tr>

<th>name</th>
<td><%= current_user.name %></td>

</tr>
<tr>
<th>introduction</th>
<th><%= current_user.introduction %></th>

</tr>
</table>

<div class='row'>
<%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user[:id]}" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>


<h2 class="mt-3">New book</h2>
<%= form_with(model: @book, local: true) do |form| %>
<div class="form_group">
<%= form.label :title %>
<%= form.text_field :title, class: "form-control book_title", id: "book_title" %>
</div>



<% if @book.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>




<div class="form-group">
<%= form.label :body, "Opinion" %>
<%= form.text_area :body, class: "form-control book_body", id: "book_body" %>
</div>



<div class="form-group">
<%= form.submit "Create Book", class: 'btn btn-success' %>
</div>
<% end %>
</div>



<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
<table class='table table-hover table-inverse'>
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>

<tr>
<td><%= image_tag book.user.get_profile_image %></td>

<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>

</tr>
<% end %>
</tbody>



</table>
</main>
</body>
</html>



